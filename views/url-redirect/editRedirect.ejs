<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Edit URL Redirect</h5>
    </div>
    <div class="card-body">
        <form id="editRedirectForm">
            <input type="hidden" id="redirectId" value="<%= redirect._id %>">
            
            <div class="row gy-3">
                <div class="col-md-6">
                    <label class="form-label">Old URL <span class="text-danger">*</span></label>
                    <input type="text" name="oldUrl" id="oldUrl" class="form-control" value="<%= redirect.oldUrl %>" required>
                    <small class="text-muted">Enter the old URL path</small>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">New URL <span class="text-danger">*</span></label>
                    <input type="text" name="newUrl" id="newUrl" class="form-control" value="<%= redirect.newUrl %>" required>
                    <small class="text-muted">Enter the new URL path or full URL</small>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Redirect Type</label>
                    <input type="text" class="form-control" value="301 - Permanent Redirect" readonly disabled>
                    <small class="text-muted">All redirects use 301 (Permanent) for SEO</small>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Status</label>
                    <select name="isActive" id="isActive" class="form-select">
                        <option value="true" <%= redirect.isActive ? 'selected' : '' %>>Active</option>
                        <option value="false" <%= !redirect.isActive ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                
                <!-- <div class="col-md-12">
                    <div class="alert alert-info">
                        <strong>Statistics:</strong><br>
                        Hit Count: <%= redirect.hitCount || 0 %><br>
                        Last Accessed: <%= redirect.lastAccessed ? new Date(redirect.lastAccessed).toLocaleString() : 'Never' %><br>
                        Created: <%= new Date(redirect.createdAt).toLocaleString() %>
                        <% if (redirect.createdBy) { %>
                            by <%= redirect.createdBy.fullName %>
                        <% } %>
                    </div>
                </div> -->
                
                <div class="col-12">
                    <button type="submit" class="btn btn-sm btn-primary" id="submitBtn">
                        <span class="btn-text">Update Redirect</span>
                        <span class="btn-spinner d-none">
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                        </span>
                    </button>
                    <a href="/url-redirect/url-redirects" class="btn btn-sm btn-outline-secondary ms-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

<% script = `
<script>
    $(document).on('input', '#editRedirectForm #oldUrl,#editRedirectForm #newUrl', function() {
        const $input = $(this);
        const query = $input.val().trim();

        // Validate URLs match
        validateUrlsMatch();

        if (query.length < 2) {
            $input.next('.autocomplete-list').remove();
            return;
        }

        $.ajax({
            url: '/api/pages/all-pages/search',
            data: { q: query },
            success: function(pages) {
            $input.next('.autocomplete-list').remove();

            if (!pages || pages.length === 0) return;

            const $list = $('<div class="autocomplete-list border bg-white position-absolute w-100 radius-8 shadow-sm mt-1 z-1"></div>');

            pages.forEach(page => {
                const $item = $(\`
                <div class="autocomplete-item p-2 text-sm cursor-pointer hover:bg-neutral-100">
                    $\{page.name} <small class="text-muted">($\{page.slug})</small>
                </div>
                \`);
                const baseUrl = $("#frontendUrl").val();

                $item.on('click', function() {
                $input.val(page.slug);
                $input.val(\`\/$\{page.slug}\`);
                $list.remove();
                validateUrlsMatch(); // Validate after autocomplete selection
                });

                $list.append($item);
            });

            $input.after($list);
            },
            error: function(err) {
            console.error('Autocomplete error:', err);
            }
        });
    });
    function validateUrl(url, fieldName) {
        if (!url || typeof url !== 'string') {
            return \`\${fieldName} is required\`;
        }
        
        const trimmed = url.trim();
        
        // Check for empty or whitespace-only URLs
        if (!trimmed) {
            return \`\${fieldName} cannot be empty\`;
        }
        
        // Check for malformed URLs like //, ///, etc.
        /* if (trimmed.match(/^\/+$/)) {
            return \`\${fieldName} cannot be just slashes (e.g., //, ///)\`;
        } */
        
        // Check for protocol-relative URLs that could be dangerous
        if (trimmed.startsWith('//')) {
            return \`\${fieldName} cannot start with (protocol-relative URLs not allowed)\`;
        }
        
        // For relative URLs, ensure they start with / and have content after
        if (!trimmed.startsWith('http') && !trimmed.startsWith('/')) {
            return \`\${fieldName} must start with / for relative URLs or http/https for absolute URLs\`;
        }
        
        // For relative URLs starting with /, ensure there's content after the slash
        if (trimmed.startsWith('/') && !trimmed.startsWith('http')) {
            if (trimmed.length === 1) {
                return \`\${fieldName} cannot be just a single slash\`;
            }
            // Check for multiple consecutive slashes
            if (trimmed.includes('//')) {
                return \`\${fieldName} cannot contain consecutive slashes\`;
            }
        }
        
        // Basic URL format validation for absolute URLs
        if (trimmed.startsWith('http')) {
            try {
                new URL(trimmed);
            } catch (e) {
                return \`\${fieldName} is not a valid URL format\`;
            }
        }
        
        return null; // Valid
    }

    function validateUrlsMatch() {
        const oldUrl = document.getElementById('oldUrl').value.trim();
        const newUrl = document.getElementById('newUrl').value.trim();
        const submitBtn = document.getElementById('submitBtn');
        
        // Remove existing validation messages
        document.querySelectorAll('.url-validation-error').forEach(el => el.remove());
        document.getElementById('oldUrl').classList.remove('is-invalid');
        document.getElementById('newUrl').classList.remove('is-invalid');
        
        let hasErrors = false;
        
        // Validate old URL format
        if (oldUrl) {
            const oldUrlError = validateUrl(oldUrl, 'Old URL');
            if (oldUrlError) {
                document.getElementById('oldUrl').classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'invalid-feedback url-validation-error';
                errorMsg.textContent = oldUrlError;
                document.getElementById('oldUrl').parentNode.appendChild(errorMsg);
                hasErrors = true;
            }
        }
        
        // Validate new URL format
        if (newUrl) {
            const newUrlError = validateUrl(newUrl, 'New URL');
            if (newUrlError) {
                document.getElementById('newUrl').classList.add('is-invalid');
                const errorMsg = document.createElement('div');
                errorMsg.className = 'invalid-feedback url-validation-error';
                errorMsg.textContent = newUrlError;
                document.getElementById('newUrl').parentNode.appendChild(errorMsg);
                hasErrors = true;
            }
        }
        
        // Check if URLs are the same (only if both are valid)
        if (!hasErrors && oldUrl && newUrl) {
            // Normalize URLs for comparison
            let normalizedOldUrl = oldUrl;
            let normalizedNewUrl = newUrl;
            
            if (!normalizedOldUrl.startsWith('/') && !normalizedOldUrl.startsWith('http')) {
                normalizedOldUrl = '/' + normalizedOldUrl;
            }
            if (!normalizedNewUrl.startsWith('/') && !normalizedNewUrl.startsWith('http')) {
                normalizedNewUrl = '/' + normalizedNewUrl;
            }
            
            if (normalizedOldUrl === normalizedNewUrl) {
                // Add error styling
                document.getElementById('oldUrl').classList.add('is-invalid');
                document.getElementById('newUrl').classList.add('is-invalid');
                
                // Add error message
                const errorMsg = document.createElement('div');
                errorMsg.className = 'invalid-feedback url-validation-error';
                errorMsg.textContent = 'Old URL and New URL cannot be the same';
                document.getElementById('newUrl').parentNode.appendChild(errorMsg);
                hasErrors = true;
            }
        }
        
        submitBtn.disabled = hasErrors;
        return !hasErrors;
    }

    // Add event listeners for real-time validation
    document.getElementById('oldUrl').addEventListener('input', validateUrlsMatch);
    document.getElementById('newUrl').addEventListener('input', validateUrlsMatch);

    document.getElementById('editRedirectForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const submitBtn = document.getElementById('submitBtn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnSpinner = submitBtn.querySelector('.btn-spinner');
        const redirectId = document.getElementById('redirectId').value;
        
        const formData = {
            oldUrl: document.getElementById('oldUrl').value.trim(),
            newUrl: document.getElementById('newUrl').value.trim(),
            redirectType: 301,
            isActive: document.getElementById('isActive').value === 'true'
        };

        // Ensure URLs start with /
        if (!formData.oldUrl.startsWith('/') && !formData.oldUrl.startsWith('http')) {
            formData.oldUrl = '/' + formData.oldUrl;
        }
        if (!formData.newUrl.startsWith('/') && !formData.newUrl.startsWith('http')) {
            formData.newUrl = '/' + formData.newUrl;
        }

        // Validate that old and new URLs are not the same
        if (formData.oldUrl === formData.newUrl) {
            showToast('Old URL and New URL cannot be the same', 'error');
            return;
        }
        
        // Show loading
        submitBtn.disabled = true;
        btnText.classList.add('d-none');
        btnSpinner.classList.remove('d-none');
        
        try {
            const response = await fetch('/api/url-redirects/' + redirectId, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(formData)
            });
            
            const result = await response.json();
            
            if (result.success) {
                showToast(result.message, 'success');
                setTimeout(() => {
                    window.location.href = '/url-redirect/url-redirects';
                }, 1500);
            } else {
                showToast(result.message, 'error');
                submitBtn.disabled = false;
                btnText.classList.remove('d-none');
                btnSpinner.classList.add('d-none');
            }
        } catch (error) {
            console.error('Error:', error);
            showToast('An error occurred', 'error');
            submitBtn.disabled = false;
            btnText.classList.remove('d-none');
            btnSpinner.classList.add('d-none');
        }
    });
</script>
` %>
