    <main class="   py-3">
      <!-- Toolbar -->
      <div class="media-toolbar d-flex flex-wrap align-items-center gap-2 mb-3">
        <div class="btn-group" role="group" aria-label="View toggle">
          <input type="radio" class="btn-check" name="viewToggle" id="viewGrid" autocomplete="off" checked>
          <label class="btn btn-outline-secondary" for="viewGrid" title="Grid view">
             <iconify-icon icon="fluent:grid-28-regular" width="1.2em" height="1.2em"></iconify-icon>
          </label>
          <input type="radio" class="btn-check" name="viewToggle" id="viewList" autocomplete="off">
          <label class="btn btn-outline-secondary" for="viewList" title="List view">
            <iconify-icon icon="mynaui:menu" width="1.2em" height="1.2em"></iconify-icon>
          </label>
        </div>

        <select id="filterType" class="form-select form-select-sm w-auto">
          <option value="all" selected>All media items</option>
          <option value="image">Images</option>
          <option value="video">Videos</option>
          <option value="pdf">PDF</option>
          <option value="doc">Documents</option>
        </select>

        <select id="filterDate" class="form-select form-select-sm w-auto">
          <option value="all" selected>All dates</option>
          <option value="2025-09">September 2025</option>
          <option value="2025-08">August 2025</option>
          <option value="2025-07">July 2025</option>
        </select>

        <div class="ms-auto d-flex flex-wrap align-items-center gap-2">
          <button id="btnBulk" class="btn btn-outline-secondary btn-sm">Bulk select</button>
          <span id="bulkCount" class="text-muted small d-none">Selected: 0</span>
          <button id="btnBulkDelete" class="btn btn-primary btn-sm d-none">Delete permanently</button>
          <div class="input-group input-group-sm media-search">
            <!-- <span class="input-group-text bg-white"><i class="bi bi-search"></i></span> -->
            <input id="searchInput" type="search" class="form-control" placeholder="Search media">
          </div>
        </div>
      </div>

      <!-- Content -->
      <div id="mediaGrid" class="media-grid row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3"></div>

      <div id="mediaList" class="media-list table-responsive d-none">
        <table class="table align-middle table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th style="width:36px"><input class="form-check-input" type="checkbox" id="selectAll"></th>
              <th>Name</th>
              <th>Type</th>
              <th>Uploaded</th>
              <th>Size</th>
              <th style="width:100px"></th>
            </tr>
          </thead>
          <tbody id="mediaListBody"></tbody>
        </table>
      </div>
    </main>

    <!-- Preview Modal (Attachment details style) -->
    <div class="modal fade" id="previewModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-xl modal-dialog-scrollable custom-dialog-modal">
        <div class="modal-content attachment-modal">
          <div class="modal-header">
            <h5 class="modal-title" id="previewTitle">Attachment details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body p-0">
            <div class="row g-0">
              <div class="col-lg-8 border-end">
                <div class="attachment-canvas p-3">
                  <div id="attachmentPreview" class="canvas-inner"></div>
                  <div class="mt-3 d-flex gap-2">
                    <button class="btn btn-outline-secondary btn-sm">Edit image</button>
                    <!-- <button class="btn btn-outline-primary btn-sm">Edit with Elementor AI</button> -->
                  </div>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="attachment-sidebar p-3">
                  <div class="small text-muted mb-2" id="metaUploaded">Uploaded on —</div>
                  <div class="small text-muted mb-3" id="metaUploadedBy">Uploaded by —</div>
                  <div class="border rounded mb-3">
                    <div class="p-3 border-bottom">
                      <div class="image-detail-size mb-1">File name: <span id="metaFilename" class="fw-semibold"></span></div>
                      <div class="image-detail-size mb-1">File type: <span id="metaType"></span></div>
                      <div class="image-detail-size mb-1">File size: <span id="metaSize"></span></div>
                      <div class="image-detail-size">Dimensions: <span id="metaDims"></span></div>
                    </div>
                    <div class="p-3">
                      <div class="mb-3">
                        <label class="form-label small">Alternative Text</label>
                        <input id="fieldAlt" type="text" class="form-control form-control-sm">
                      </div>
                      <div class="mb-3">
                        <label class="form-label small">Title</label>
                        <input id="fieldTitle" type="text" class="form-control form-control-sm">
                      </div>
                      <div class="mb-3">
                        <label class="form-label small">Caption</label>
                        <textarea id="fieldCaption" rows="2" class="form-control form-control-sm"></textarea>
                      </div>
                      <div class="mb-3">
                        <label class="form-label small">Description</label>
                        <textarea id="fieldDesc" rows="3" class="form-control form-control-sm"></textarea>
                      </div>
                      <div class="mb-2">
                        <label class="form-label small">File URL</label>
                        <div class="input-group input-group-sm">
                          <input id="fieldUrl" type="text" class="form-control" readonly>
                          <button id="btnCopyUrl" class="btn btn-outline-secondary" type="button">Copy URL</button>
                        </div>
                      </div>
                      <div class="d-flex justify-content-between mt-3">
                        <a href="#" id="linkViewFile" class="small">View media file</a>
                        <a href="#" class="small">Edit more details</a>
                      </div>
                      <div class="d-flex justify-content-between mt-2">
                        <a href="#" id="linkDownload" class="small">Download file</a>
                        <a href="#" class="text-danger small">Delete permanently</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Insert</button>
          </div>
        </div>
      </div>
    </div>
</div>