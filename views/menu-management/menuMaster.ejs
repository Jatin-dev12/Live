<div class="row">
    <div class="col-12 mb-3">
        <div class="d-flex align-items-center gap-2">
            <span>Select a menu to edit:</span>
            <select id="menuSelect" class="form-select" style="width: 200px;">
                <option value="header-menu">Header Menu</option>
                <option value="footer-menu">Footer Menu</option>
            </select>
            <button id="selectMenuBtn" class="btn btn-primary btn-sm">Select</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Add Menu</h6>
                <button id="selectAllBtn" class="btn btn-primary btn-sm">Select All</button>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;" id="addMenuBody">
                <div id="pageListLoader" class="text-center py-4">
                    <div class="spinner-border spinner-border-sm text-danger" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-2 mb-0">Loading pages...</p>
                </div>
                <div id="pageListContent" style="display: none;">
                    <% if (typeof pages !=='undefined' && pages.length> 0) { %>
                        <% pages.forEach(page=> { %>
                            <div class="form-check mb-2 d-flex align-items-center">
                                <input class="form-check-input page-checkbox" type="checkbox" id="page-<%= page._id %>"
                                    data-title="<%= page.name %>" data-url="<%= page.path %>">
                                <label class="form-check-label" for="page-<%= page._id %>">
                                    <%= page.name %>
                                </label>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p class="text-muted text-center">No pages available</p>
                                    <% } %>
                </div>
            </div>
            <div class="card-footer">
                <button id="addToMenuBtn" class="btn btn-primary btn-sm w-100">Add to Menu</button>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card" id="menuStructurePanel" style="display: none;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0" id="currentMenuName"></h6>
                <div>
                    <!-- <button id="resetBtn" class="btn btn-sm btn-outline-secondary">Reset</button> -->
                    <button id="saveBtn" class="btn btn-sm btn-primary">Save Menu</button>
                </div>
            </div>
            <div class="card-body" style="min-height: 400px;">
                <div id="menuList"></div>
            </div>
        </div>

        <div class="card text-center" id="emptyState">
            <div class="card-body py-5">
                <iconify-icon icon="material-symbols:menu-open" style="font-size: 64px; opacity: 0.3;"></iconify-icon>
                <h6 class="mt-3">No Menu Selected</h6>
                <p class="text-muted mb-0">Select a menu from the dropdown above to start editing</p>
            </div>
        </div>
    </div>
</div>



