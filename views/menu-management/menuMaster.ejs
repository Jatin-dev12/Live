<div class="custom-menu-widget py-4">
      <div class="row align-items-center select-menu-row">
        <div class="col-md-7">
          <div class="select-menu-widget">
            <p>Select a menu to edit:</p>
            <select class="form-control form-control-sm">
              <option value="0">Select Menu</option>
              <option value="1">Header Menu</option>
              <option value="2">Footer Menu</option>
            </select>
            <button class="btn btn-primary">Select</button>
          </div>
        </div>
        <div class="col-md-5 btn-nmobile">
          <div class=" text-end">
            <button id="resetBtn" class="btn btn-outline-secondary btn-sm">Reset</button>
            <button id="saveBtn" class="btn btn-primary btn-sm">Save Menu</button>
          </div>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-12 col-lg-4">
          <div class="card h-100">
            <div class="card-header custom-menu-header d-flex justify-content-between align-items-center">
              <span class="fw-semibold">Add Menu</span>
              <button id="selectAll" class="select-all-btn">Select All</button>
            </div>
            <div class="card-body p-0 custom-menu-list">
              <div id="pagesList" class="list-group list-group-flush small">
                <!-- Pages rendered by JS -->
              </div>
            </div>
            <div class="card-footer text-end">
              <button id="addToMenuBtn" class="btn btn-primary">Add to Menu</button>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-8">
          <div class="card h-100">
            <div class="card-header custom-menu-header">
              <span class="fw-semibold">Menu Structure</span>
            </div>
            <div class="card-body">
              <div id="menuList" class="menu-list">
                <!-- Menu items appear here -->
              </div>
              <!-- <div class="mt-3 text-muted small">Drag to reorder. Use arrows to indent/outdent. Click remove to delete.</div> -->
            </div>
          </div>
        </div>
      </div>
    </div>