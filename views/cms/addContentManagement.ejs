    // Image uploads for new types
    function handleUpload(inputSelector, uploadedCls, previewCls, removeBtnCls, labelCls, folder) {
        $(document).on('change', inputSelector, function(e) {
            if (e.target.files.length) {
                const $section = $(this).closest('.section-block');
                const file = e.target.files[0];
                const $input = $(this);
                const src = URL.createObjectURL(file);
                $section.find(previewCls).attr('src', src);
                $section.find(uploadedCls).removeClass('d-none');
                $section.find(labelCls).addClass('d-none');
                const formData = new FormData();
                // append folder before file so multer destination can read it reliably
                formData.append('folder', folder);
                formData.append('file', file);
                $.ajax({
                    url: '/api/upload', type: 'POST', data: formData, processData: false, contentType: false,
                    success: function(response) {
                        if (response.success) { $input.data('uploaded', true); $input.data('serverPath', response.url); showToast('Image uploaded', 'success'); }
                        else { showToast('Upload failed', 'error'); }
                    },
                    error: function(xhr) { showToast('Upload error', 'error'); }
                });
            }
        });
        $(document).on('click', removeBtnCls, function() {
            const $section = $(this).closest('.section-block');
            $section.find(previewCls).attr('src', '');
            $section.find(uploadedCls).addClass('d-none');
            $section.find(labelCls).removeClass('d-none');
            $section.find(inputSelector).val('').data('uploaded', false).data('serverPath', '');
        });
    }
