                // budget: parseFloat(document.getElementById('budget').value) || 0,
                // max_impressions: parseInt(document.getElementById('max_impressions').value) || 0,
                // max_clicks: parseInt(document.getElementById('max_clicks').value) || 0,
                // created_by_type: document.getElementById('created_by_type').value
            };

            try {
                const response = await fetch('/api/ads/' + adId, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    showToast('Ad updated successfully!', 'success');
                    setTimeout(() => {
                        window.location.href = '/ads/ads-management';
                    }, 1500);
                } else {
                    showToast('Failed to update ad: ' + (result.message || 'Unknown error'), 'error');
                    submitBtn.disabled = false;
                    btnText.classList.remove('d-none');
                    btnSpinner.classList.add('d-none');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred while updating the ad', 'error');
                submitBtn.disabled = false;
                btnText.classList.remove('d-none');
                btnSpinner.classList.add('d-none');
            }
        });
    });

    // Initialize form with server data
    document.addEventListener('DOMContentLoaded', function() {
        const adData = {
            _id: '<%= ad._id %>',
            title: '<%= ad.title %>',
            description: `<%= ad.description %>`,
            media_url: '<%= ad.media_url %>',
            ad_type: '<%= ad.ad_type %>',
            link_url: '<%= ad.link_url || "" %>',
            link_target: '<%= ad.link_target || "_self" %>',
            priority: <%= ad.priority || 1 %>,
            status: '<%= ad.status %>',
            start_date: '<%= ad.start_date %>',
            end_date: '<%= ad.end_date %>',
            budget: <%= ad.budget || 0 %>,
            max_impressions: <%= ad.max_impressions || 0 %>,
            max_clicks: <%= ad.max_clicks || 0 %>,
            current_impressions: <%= ad.current_impressions || 0 %>,
            current_clicks: <%= ad.current_clicks || 0 %>,
            spent_budget: <%= ad.spent_budget || 0 %>,
            created_by_type: '<%= ad.created_by_type || "admin" %>',
            placement_id: '<%= ad.placement_id && ad.placement_id._id ? ad.placement_id._id : "" %>'
        };
        
        console.log('Initializing edit form with ad data:', adData);
        console.log('Media URL from database:', adData.media_url);
        
        initializeForm(adData);
    });

    // Populate placements dropdown
    <% if (typeof placements !== 'undefined' && placements.length > 0) { %>
    document.addEventListener('DOMContentLoaded', function() {
        const placementSelect = document.getElementById('placement_id');
        const placements = [
            <% placements.forEach((placement, index) => { %>
            {
                _id: '<%= placement._id %>',
                name: '<%= placement.name %>',
                pageLocation: '<%= placement.pageLocation %>'
            }<%= index < placements.length - 1 ? ',' : '' %>
            <% }); %>
        ];
        
        placements.forEach(placement => {
            const option = document.createElement('option');
            option.value = placement._id;
            option.textContent = placement.name + ' - ' + placement.pageLocation;
            if (placement._id === window.adData.placement_id) {
                option.selected = true;
            }
            placementSelect.appendChild(option);
        });
    });
    <% } %>
</script>