    // Toast notification function
    function showToast(message, type) {
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            customClass: {
                title: 'swal-toast-small'
            },
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });

        let icon = 'info';
        if (type === 'success') icon = 'success';
        else if (type === 'error') icon = 'error';
        else if (type === 'warning') icon = 'warning';

        Toast.fire({
            icon: icon,
            title: message
        });
    }

    // Handle Ad Type dropdown change
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('ad_type').addEventListener('change', function() {
            const customContainer = document.getElementById('customAdTypeContainer');
            if (this.value === 'custom') {
                customContainer.classList.remove('d-none');
                document.getElementById('custom_ad_type').setAttribute('required', 'required');
            } else {
                customContainer.classList.add('d-none');
                document.getElementById('custom_ad_type').removeAttribute('required');
                document.getElementById('custom_ad_type').value = '';
            }
        });
    });

    // Fetch media for ads (only from ads folder)
    async function fetchAdMedia() {
        try {
            console.log('Fetching ad media from /api/ads/media');
            const response = await fetch('/api/ads/media');
            if (!response.ok) {
                console.error('Response not OK:', response.status, response.statusText);
                throw new Error('HTTP ' + response.status + ': ' + response.statusText);
            }
            
            const result = await response.json();
            
            console.log('Ad media API response:', result);
            
            if (result.success) {
                // Filter to only show images
                adMediaItems = result.data.filter(item => item.type === 'image');
                console.log('Filtered ad media items:', adMediaItems.length, 'images');
                renderAdMediaGrid();
                
                if (adMediaItems.length > 0) {
                    showToast('Loaded ' + adMediaItems.length + ' ad images', 'success');
                }
            } else {
                console.error('API returned error:', result.message);
                showToast('Failed to load ad media: ' + (result.message || 'Unknown error'), 'error');
                adMediaItems = [];
                renderAdMediaGrid();
            }
        } catch (error) {
            console.error('Error fetching ad media:', error);
            showToast('Error loading ad media', 'error');
            // Show empty state
            adMediaItems = [];
            renderAdMediaGrid();
        }
    }

    // Render media grid for ads
    function renderAdMediaGrid() {
        const grid = document.getElementById('adMediaGrid');
        const searchTerm = document.getElementById('adSearchInput').value.toLowerCase();
        const typeFilter = document.getElementById('adFilterType').value;
        
        let filteredItems = adMediaItems.filter(item => {
            const matchesSearch = item.originalName.toLowerCase().includes(searchTerm);
            // Only show images (no videos)
            const matchesType = item.type === 'image';
            return matchesSearch && matchesType;
        });

        if (filteredItems.length === 0) {
            const emptyMessage = adMediaItems.length === 0 ? 
                'No ad images yet. Upload your first image!' : 
                'No images found matching your search.';
            grid.innerHTML = '<div class="col-12 text-center py-4">' +
                '<iconify-icon icon="material-symbols:image-outline" class="text-muted" style="font-size: 3rem;"></iconify-icon>' +
                '<p class="text-muted mb-0 mt-2">' + emptyMessage + '</p>' +
                '</div>';
            return;
        }

        grid.innerHTML = filteredItems.map(item => {
            // Only images are supported now
            const mediaHtml = '<img src="' + item.url + '" alt="' + item.originalName + '" class="w-100 h-100 object-fit-cover">';
            
            return '<div class="col">' +
                '<div class="ad-media-item border rounded p-2 text-center" ' +
                'data-id="' + item._id + '" ' +
                'data-url="' + item.url + '" ' +
                'data-name="' + item.originalName + '" ' +
                'data-type="' + item.type + '" ' +
                'style="cursor: pointer; transition: all 0.2s;">' +
                '<div class="media-thumb mb-2" style="height: 60px; overflow: hidden; border-radius: 4px;">' +
                mediaHtml +
                '</div>' +
                '<small class="text-truncate d-block" title="' + item.originalName + '">' + item.originalName + '</small>' +
                '</div>' +
                '</div>';
        }).join('');

        // Add click handlers
        grid.querySelectorAll('.ad-media-item').forEach(item => {
            item.addEventListener('click', function() {
                selectAdMedia({
                    id: this.dataset.id,
                    url: this.dataset.url,
                    name: this.dataset.name,
                    type: this.dataset.type
                });
            });

            // Hover effects
            item.addEventListener('mouseenter', function() {
                this.style.borderColor = '#0d6efd';
                this.style.backgroundColor = '#f8f9fa';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.borderColor = '#dee2e6';
                this.style.backgroundColor = 'white';
            });
        });
    }

    // Select media for ad
    function selectAdMedia(media) {
        selectedMedia = media;
        document.getElementById('media_url').value = media.url;
        
        // Show preview
        const preview = document.getElementById('selectedMediaPreview');
        const image = document.getElementById('selectedMediaImage');
        const name = document.getElementById('selectedMediaName');
        const info = document.getElementById('selectedMediaInfo');
        
        image.src = media.url;
        name.textContent = media.name;
        info.textContent = 'Image file';
        
        preview.classList.remove('d-none');
        document.getElementById('adMediaLibrary').classList.add('d-none');
        
        showToast('Media selected successfully', 'success');
    }

    // Remove selected media (show library to select new one)
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('removeSelectedMedia').addEventListener('click', function() {
            document.getElementById('selectedMediaPreview').classList.add('d-none');
            document.getElementById('adMediaLibrary').classList.remove('d-none');
