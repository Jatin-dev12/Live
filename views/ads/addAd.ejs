<div class="row gy-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form id="addAdForm" enctype="multipart/form-data">
                    <div class="row gy-3">
                        <div class="col-md-12">
                            <label class="form-label">Title <span class="text-danger">*</span></label>
                            <input type="text" name="title" id="title" class="form-control" placeholder="Enter ad title" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ad Type <span class="text-danger">*</span></label>
                            <select name="ad_type" id="ad_type" class="form-select" required>
                                <option value="">Select Ad Type</option>
                                <option value="horizontal">Horizontal</option>
                                <option value="vertical">Vertical</option>
                                <!-- <option value="native">Native</option>
                                <option value="popup">Popup</option>
                                <option value="custom">+ Add Custom Ad Type</option> -->
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Status <span class="text-danger">*</span></label>
                            <select name="status" id="status" class="form-select" required>
                                <option value="pending">Pending</option>
                                <option value="active">Active</option>
                                <option value="paused">Paused</option>
                                <option value="expired">Expired</option>
                                <option value="rejected">Rejected</option>
                            </select>
                        </div>

                        <!-- Custom Ad Type Input (Hidden by default) -->
                        <div class="col-md-6 d-none" id="customAdTypeContainer">
                            <label class="form-label">Custom Ad Type Name <span class="text-danger">*</span></label>
                            <input type="text" id="custom_ad_type" class="form-control" placeholder="Enter custom ad type name">
                            <small class="text-muted">Enter a custom ad type (e.g., "interstitial", "rewarded")</small>
                        </div>
                        
                        <div class="col-md-12">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea name="description" id="description" class="form-control" rows="4" placeholder="Enter ad description..." required></textarea>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Upload Media <span class="text-danger">*</span></label>
                            
                            <!-- Media Management Interface -->
                            <div class="ad-media-manager border rounded p-3 bg-light">
                                <!-- Selected Media Preview -->
                                <div id="selectedMediaPreview" class="selected-media-preview d-none mb-3">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <div class="selected-media-thumb" style="width: 80px; height: 80px; border-radius: 8px; overflow: hidden; border: 2px solid #dee2e6;">
                                                <img id="selectedMediaImage" src="" alt="" class="w-100 h-100 object-fit-cover">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <h6 class="mb-1" id="selectedMediaName">Selected Media</h6>
                                            <small class="text-muted" id="selectedMediaInfo">Image info</small>
                                        </div>
                                        <div class="col-auto">
                                            <button type="button" class="btn btn-sm btn-outline-danger" id="removeSelectedMedia">
                                                <iconify-icon icon="material-symbols:close"></iconify-icon> Remove
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary ms-1" id="deleteSelectedMedia" title="Delete from server">
                                                <iconify-icon icon="material-symbols:delete-outline"></iconify-icon>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Media Library Interface -->
                                <div id="adMediaLibrary">
                                    <!-- Toolbar -->
                                    <div class="media-toolbar d-flex flex-wrap align-items-center gap-2 mb-3">
                                        <button type="button" class="btn btn-primary btn-sm" id="uploadNewMedia">
                                            <iconify-icon icon="ic:baseline-plus"></iconify-icon> Upload New
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm" id="refreshAdMedia">
                                            <iconify-icon icon="material-symbols:refresh"></iconify-icon> Refresh
                                        </button>
                                        
                                        <select id="adFilterType" class="form-select form-select-sm w-auto">
                                            <option value="all">All images</option>
                                            <option value="image">Images only</option>
                                        </select>

                                        <div class="ms-auto">
                                            <div class="input-group input-group-sm">
                                                <input id="adSearchInput" type="search" class="form-control form-control-sm" placeholder="Search media">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Media Grid -->
                                    <div id="adMediaGrid" class="ad-media-grid row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-2" style="max-height: 300px; overflow-y: auto;">
                                        <!-- Media items will be loaded here -->
                                    </div>
                                </div>
                            </div>
                            
                            <input type="hidden" id="media_url" name="media_url" required>
                            <small class="text-muted">Select or upload an image for your advertisement. Files are stored separately from the main media library.</small>
                        </div>

                        <!-- Link Configuration -->
                        <div class="col-md-8">
                            <label class="form-label">Link URL</label>
                            <input type="url" name="link_url" id="link_url" class="form-control" placeholder="https://example.com">
                            <small class="text-muted">Optional: Where should the ad redirect when clicked</small>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Link Target</label>
                            <select name="link_target" id="link_target" class="form-select">
                                <option value="_blank">New Window</option>
                                <option value="_self">Same Window</option>
                            </select>
                        </div>

                        <!-- Placement Configuration -->
                        <!-- <div class="col-md-6">
                            <label class="form-label">Placement <span class="text-danger">*</span></label>
                            <select name="placement_id" id="placement_id" class="form-select" required>
                                <option value="">Select Placement</option>
                                <% if (typeof placements !== 'undefined' && placements.length > 0) { %>
                                    <% placements.forEach(placement => { %>
                                        <option value="<%= placement._id %>"><%= placement.name %> - <%= placement.pageLocation %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                            <small class="text-muted">Select where to display the advertisement</small>
                        </div> -->

                        <!-- <div class="col-md-6">
                            <label class="form-label">Priority</label>
                            <input type="number" name="priority" id="priority" class="form-control" placeholder="1" min="1" max="100" value="1">
                            <small class="text-muted">Higher numbers show first (1-100)</small>
                        </div> -->

                        

                        <div class="col-md-6">
                            <label class="form-label">Start Date <span class="text-danger">*</span></label>
                            <input type="date" name="start_date" id="start_date" class="form-control" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">End Date <span class="text-danger">*</span></label>
                            <input type="date" name="end_date" id="end_date" class="form-control" required>
                        </div>

                        <!-- <div class="col-md-4">
                            <label class="form-label">Budget ($)</label>
                            <input type="number" name="budget" id="budget" class="form-control" placeholder="0.00" min="0" step="0.01" value="0">
                            <small class="text-muted">Leave 0 for unlimited</small>
                        </div> -->

                        <!-- <div class="col-md-4">
                            <label class="form-label">Max Impressions</label>
                            <input type="number" name="max_impressions" id="max_impressions" class="form-control" placeholder="0" min="0" value="0">
                            <small class="text-muted">Leave 0 for unlimited</small>
                        </div> -->

                        <!-- <div class="col-md-4">
                            <label class="form-label">Max Clicks</label>
                            <input type="number" name="max_clicks" id="max_clicks" class="form-control" placeholder="0" min="0" value="0">
                            <small class="text-muted">Leave 0 for unlimited</small>
                        </div> -->

                        <!-- <div class="col-md-6">
                            <label class="form-label">Created By Type</label>
                            <select name="created_by_type" id="created_by_type" class="form-select">
                                <option value="admin">Admin</option>
                                <option value="advertiser">Advertiser</option>
                            </select>
                        </div> -->

                        <!-- <div class="col-12">
                            <hr class="my-3">
                            <h6 class="mb-3">Page Selection</h6>
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <button type="button" class="btn btn-outline-info btn-sm" id="openPageSelectionBtn">
                                    <iconify-icon icon="material-symbols:web-stories-outline" class="me-1"></iconify-icon>
                                    Manage Page Selection
                                </button>
                                <span class="text-muted" id="selectedPagesInfo">
                                    <span id="selectedPagesCount">0</span> pages selected
                                </span>
                            </div>
                            <input type="hidden" id="selected_pages" name="selected_pages" value="">
                        </div> -->

                        <div class="col-12">
                            <button type="submit" class="btn btn-sm btn-primary" id="submitBtn">
                                <span class="btn-text">Create Ad</span>
                                <span class="btn-spinner d-none">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    Creating...
                                </span>
                            </button>
                            <a href="/ads/ads-management" class="btn btn-sm btn-outline-secondary ms-2">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% script = `
<!-- SweetAlert2 CSS and JS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

<style>
    .swal-toast-small {
        font-size: 13px !important;
    }
    
    .ad-media-manager {
        min-height: 200px;
    }
    
    .ad-media-item {
        transition: all 0.2s ease;
    }
    
    .ad-media-item:hover {
        border-color: #0d6efd !important;
        background-color: #f8f9fa !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .selected-media-thumb {
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .media-thumb img,
    .media-thumb video {
        border-radius: 4px;
    }
    
    .ad-media-grid {
        border: 1px solid #e9ecef;
        border-radius: 6px;
        padding: 10px;
        background: white;
    }
    
    .ad-media-grid:empty::after {
        content: "No media files found";
        display: block;
        text-align: center;
        color: #6c757d;
        padding: 2rem;
    }
</style>

<script>
    // Toast notification function
    function showToast(message, type) {
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            customClass: {
                title: 'swal-toast-small'
            },
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });

        let icon = 'info';
        if (type === 'success') icon = 'success';
        else if (type === 'error') icon = 'error';
        else if (type === 'warning') icon = 'warning';

        Toast.fire({
            icon: icon,
            title: message
        });
    }

    // Handle Ad Type dropdown change
    document.getElementById('ad_type').addEventListener('change', function() {
        const customContainer = document.getElementById('customAdTypeContainer');
        if (this.value === 'custom') {
            customContainer.classList.remove('d-none');
            document.getElementById('custom_ad_type').setAttribute('required', 'required');
        } else {
            customContainer.classList.add('d-none');
            document.getElementById('custom_ad_type').removeAttribute('required');
            document.getElementById('custom_ad_type').value = '';
        }
    });

    // Ad Media Management
    let adMediaItems = [];
    let selectedMedia = null;

    // Fetch media for ads (only from ads folder)
    async function fetchAdMedia() {
        try {
            console.log('Fetching ad media from /api/ads/media');
            const response = await fetch('/api/ads/media');
            if (!response.ok) {
                console.error('Response not OK:', response.status, response.statusText);
                throw new Error('HTTP ' + response.status + ': ' + response.statusText);
            }
            
            const result = await response.json();
            
            console.log('Ad media API response:', result);
            
            if (result.success) {
                // Filter to only show images
                adMediaItems = result.data.filter(item => item.type === 'image');
                console.log('Filtered ad media items:', adMediaItems.length, 'images');
                renderAdMediaGrid();
                
                if (adMediaItems.length > 0) {
                    showToast('Loaded ' + adMediaItems.length + ' ad images', 'success');
                }
            } else {
                console.error('API returned error:', result.message);
                showToast('Failed to load ad media: ' + (result.message || 'Unknown error'), 'error');
                adMediaItems = [];
                renderAdMediaGrid();
            }
        } catch (error) {
            console.error('Error fetching ad media:', error);
            showToast('Error loading ad media', 'error');
            // Show empty state
            adMediaItems = [];
            renderAdMediaGrid();
        }
    }

    // Render media grid for ads
    function renderAdMediaGrid() {
        const grid = document.getElementById('adMediaGrid');
        const searchTerm = document.getElementById('adSearchInput').value.toLowerCase();
        const typeFilter = document.getElementById('adFilterType').value;
        
        let filteredItems = adMediaItems.filter(item => {
            const matchesSearch = item.originalName.toLowerCase().includes(searchTerm);
            // Only show images (no videos)
            const matchesType = item.type === 'image';
            return matchesSearch && matchesType;
        });

        if (filteredItems.length === 0) {
            const emptyMessage = adMediaItems.length === 0 ? 
                'No ad images yet. Upload your first image!' : 
                'No images found matching your search.';
            grid.innerHTML = '<div class="col-12 text-center py-4">' +
                '<iconify-icon icon="material-symbols:image-outline" class="text-muted" style="font-size: 3rem;"></iconify-icon>' +
                '<p class="text-muted mb-0 mt-2">' + emptyMessage + '</p>' +
                '</div>';
            return;
        }

        grid.innerHTML = filteredItems.map(item => {
            // Only images are supported now
            const mediaHtml = '<img src="' + item.url + '" alt="' + item.originalName + '" class="w-100 h-100 object-fit-cover">';
            
            return '<div class="col">' +
                '<div class="ad-media-item border rounded p-2 text-center" ' +
                'data-id="' + item._id + '" ' +
                'data-url="' + item.url + '" ' +
                'data-name="' + item.originalName + '" ' +
                'data-type="' + item.type + '" ' +
                'style="cursor: pointer; transition: all 0.2s;">' +
                '<div class="media-thumb mb-2" style="height: 60px; overflow: hidden; border-radius: 4px;">' +
                mediaHtml +
                '</div>' +
                '<small class="text-truncate d-block" title="' + item.originalName + '">' + item.originalName + '</small>' +
                '</div>' +
                '</div>';
        }).join('');

        // Add click handlers
        grid.querySelectorAll('.ad-media-item').forEach(item => {
            item.addEventListener('click', function() {
                selectAdMedia({
                    id: this.dataset.id,
                    url: this.dataset.url,
                    name: this.dataset.name,
                    type: this.dataset.type
                });
            });

            // Hover effects
            item.addEventListener('mouseenter', function() {
                this.style.borderColor = '#0d6efd';
                this.style.backgroundColor = '#f8f9fa';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.borderColor = '#dee2e6';
                this.style.backgroundColor = 'white';
            });
        });
    }

    // Select media for ad
    function selectAdMedia(media) {
        selectedMedia = media;
        document.getElementById('media_url').value = media.url;
        
        // Show preview
        const preview = document.getElementById('selectedMediaPreview');
        const image = document.getElementById('selectedMediaImage');
        const name = document.getElementById('selectedMediaName');
        const info = document.getElementById('selectedMediaInfo');
        
        image.src = media.url;
        name.textContent = media.name;
        info.textContent = 'Image file';
        
        preview.classList.remove('d-none');
        document.getElementById('adMediaLibrary').classList.add('d-none');
        
        showToast('Media selected successfully', 'success');
    }

    // Remove selected media
    document.getElementById('removeSelectedMedia').addEventListener('click', function() {
        selectedMedia = null;
        document.getElementById('media_url').value = '';
        document.getElementById('selectedMediaPreview').classList.add('d-none');
        document.getElementById('adMediaLibrary').classList.remove('d-none');
    });

    // Delete selected media from server
    document.getElementById('deleteSelectedMedia').addEventListener('click', async function() {
        if (!selectedMedia) return;
        
        const result = await Swal.fire({
            title: 'Delete Media File?',
            text: 'This will permanently delete "' + selectedMedia.name + '" from the server. This action cannot be undone!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        });

        if (!result.isConfirmed) return;
        
        try {
            const response = await fetch('/api/ads/media/' + encodeURIComponent(selectedMedia.name), {
                method: 'DELETE'
            });
            
            const deleteResult = await response.json();
            
            if (deleteResult.success) {
                showToast('Media file deleted successfully', 'success');
                
                // Remove from local array
                adMediaItems = adMediaItems.filter(item => item.originalName !== selectedMedia.name);
                
                // Clear selection
                selectedMedia = null;
                document.getElementById('media_url').value = '';
                document.getElementById('selectedMediaPreview').classList.add('d-none');
                document.getElementById('adMediaLibrary').classList.remove('d-none');
                
                // Re-render grid
                renderAdMediaGrid();
            } else {
                showToast('Failed to delete media file: ' + (deleteResult.message || 'Unknown error'), 'error');
            }
        } catch (error) {
            console.error('Delete error:', error);
            showToast('Error deleting media file', 'error');
        }
    });

    // Upload new media
    document.getElementById('uploadNewMedia').addEventListener('click', function() {
        const input = document.createElement('input');
        input.type = 'file';
        input.accept = 'image/*';
        input.multiple = false;
        
        input.onchange = async function(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            const formData = new FormData();
            formData.append('file', file);
            formData.append('folder', 'ads');
            
            try {
                showToast('Uploading media...', 'info');
                
                const response = await fetch('/api/upload', {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    const uploadedMedia = result.data;
                    
                    // Refresh the ad media list to get the latest files
                    await fetchAdMedia();
                    
                    // Auto-select the uploaded media
                    selectAdMedia({
                        id: 'file_' + Date.now(),
                        url: uploadedMedia.path,
                        name: uploadedMedia.filename,
                        type: 'image'
                    });
                    
                    showToast('Media uploaded and selected!', 'success');
                } else {
                    showToast('Failed to upload media: ' + (result.message || 'Unknown error'), 'error');
                }
            } catch (error) {
                console.error('Upload error:', error);
                showToast('Error uploading media', 'error');
            }
        };
        
        input.click();
    });

    // Media search and filter
    document.getElementById('adSearchInput').addEventListener('input', function() {
        clearTimeout(this.searchTimeout);
        this.searchTimeout = setTimeout(renderAdMediaGrid, 300);
    });

    document.getElementById('adFilterType').addEventListener('change', renderAdMediaGrid);

    // Refresh media library
    document.getElementById('refreshAdMedia').addEventListener('click', function() {
        showToast('Refreshing media library...', 'info');
        fetchAdMedia();
    });

    // Initialize media library
    console.log('Initializing ad media library...');
    fetchAdMedia();

    // Set minimum date to today
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('start_date').setAttribute('min', today);
    document.getElementById('end_date').setAttribute('min', today);

    // Update end date minimum when start date changes
    document.getElementById('start_date').addEventListener('change', function() {
        const startDate = this.value;
        document.getElementById('end_date').setAttribute('min', startDate);
        
        // Clear end date if it's before the new start date
        const endDate = document.getElementById('end_date').value;
        if (endDate && endDate < startDate) {
            document.getElementById('end_date').value = '';
        }
    });

    // Form submission
    document.getElementById('addAdForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const submitBtn = document.getElementById('submitBtn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnSpinner = submitBtn.querySelector('.btn-spinner');

        // Validate dates
        const startDate = document.getElementById('start_date').value;
        const endDate = document.getElementById('end_date').value;

        if (new Date(endDate) <= new Date(startDate)) {
            showToast('End date must be after start date', 'error');
            return;
        }

        // Show loading state
        submitBtn.disabled = true;
        btnText.classList.add('d-none');
        btnSpinner.classList.remove('d-none');

        // Handle custom ad type
        let adType = document.getElementById('ad_type').value;
        if (adType === 'custom') {
            const customAdType = document.getElementById('custom_ad_type').value.trim();
            if (!customAdType) {
                showToast('Please enter a custom ad type name', 'error');
                submitBtn.disabled = false;
                btnText.classList.remove('d-none');
                btnSpinner.classList.add('d-none');
                return;
            }
            adType = customAdType.toLowerCase().replace(/\s+/g, '-');
        }

        // Check if media is selected
        const mediaUrl = document.getElementById('media_url').value;
        if (!mediaUrl) {
            showToast('Please select a media file', 'error');
            submitBtn.disabled = false;
            btnText.classList.remove('d-none');
            btnSpinner.classList.add('d-none');
            return;
        }

        // Collect form data
        const formData = {
            title: document.getElementById('title').value,
            description: document.getElementById('description').value,
            media_url: mediaUrl,
            ad_type: adType,
            // placement_id: document.getElementById('placement_id').value,
            link_url: document.getElementById('link_url').value,
            link_target: document.getElementById('link_target').value,
            // priority: parseInt(document.getElementById('priority').value) || 1,
            status: document.getElementById('status').value,
            start_date: startDate,
            end_date: endDate,
            // budget: parseFloat(document.getElementById('budget').value) || 0,
            // max_impressions: parseInt(document.getElementById('max_impressions').value) || 0,
            // max_clicks: parseInt(document.getElementById('max_clicks').value) || 0,
            // created_by_type: document.getElementById('created_by_type').value
        };

        try {
            const response = await fetch('/api/ads', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const result = await response.json();

            if (result.success) {
                showToast('Ad created successfully!', 'success');
                setTimeout(() => {
                    window.location.href = '/ads/ads-management';
                }, 1500);
            } else {
                showToast('Failed to create ad: ' + (result.message || 'Unknown error'), 'error');
                // Reset button state
                submitBtn.disabled = false;
                btnText.classList.remove('d-none');
                btnSpinner.classList.add('d-none');
            }
        } catch (error) {
            console.error('Error:', error);
            showToast('An error occurred while creating the ad', 'error');
            // Reset button state
            submitBtn.disabled = false;
            btnText.classList.remove('d-none');
            btnSpinner.classList.add('d-none');
        }
    });
</script>
` %>
