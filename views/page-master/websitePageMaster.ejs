<div class="card p-0 radius-12">
    <div class="card-header border-bottom bg-base py-16 px-24 d-flex align-items-center flex-wrap gap-3 justify-content-between">
        <div class="d-flex align-items-center flex-wrap gap-3">
            <form class="navbar-search">
                <input type="text" id="pageSearch" class="bg-base h-40-px w-auto" placeholder="Search pages...">
                <iconify-icon icon="ion:search-outline" class="icon"></iconify-icon>
            </form>
        </div>
        <a href="/page-master/add-page" class="btn btn-primary text-sm btn-sm px-12 py-12 radius-8 d-flex align-items-center gap-2">
            <iconify-icon icon="ic:baseline-plus" class="icon text-xl line-height-1"></iconify-icon>
            Add New Page
        </a>
    </div>
    <div class="card-body p-24">
        <div class="table-responsive scroll-sm">
            <table class="table bordered-table sm-table mb-0">
                <thead>
                    <tr>
                        <th scope="col">Page</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Updated</th>
                        <th scope="col" class="text-center">Status</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody id="pagesTableBody">
                    <% if (typeof pages !== 'undefined' && pages.length > 0) { %>
                        <% pages.forEach(page => { %>
                            <tr data-page-id="<%= page._id %>">
                                <td><%= page.name %></td>
                                <td><%= page.path %></td>
                                <td><%= new Date(page.updatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                                <td class="text-center">
                                    <% if (page.status === 'active') { %>
                                        <span class="bg-success-focus text-success-600 border border-success-main px-24 py-4 radius-4 fw-medium text-sm">Published</span>
                                    <% } else { %>
                                        <span class="bg-neutral-200 text-neutral-600 border border-neutral-400 px-24 py-4 radius-4 fw-medium text-sm">Draft</span>
                                    <% } %>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center gap-10 justify-content-center">
                                        <!-- <a href="<%= page.path %>" target="_blank" class="bg-info-focus bg-hover-info-200 text-info-600 fw-medium w-40-px h-40-px d-flex justify-content-center align-items-center rounded-circle">
                                            <iconify-icon icon="majesticons:eye-line" class="icon text-xl"></iconify-icon>
                                        </a> -->
                                        <div class="d-flex justify-content-center align-items-center">
                                            <% 
                                                var pageStatus = page.status;
                                                var pageUrl = frontendUrl + '/' + page.slug;

                                                // If status is active â†’ add ?draft=true
                                                if (pageStatus === 'inactive') {
                                                    pageUrl += '?draft=true';
                                                }
                                            %>

                                            <a href="<%= pageUrl %>" target="_blank" class="bg-success-focus text-success-600 bg-hover-success-200 fw-medium w-40-px h-40-px d-flex justify-content-center align-items-center">
                                                <iconify-icon icon="majesticons:eye-line" class="icon text-xl"></iconify-icon>
                                            </a>
                                            <!-- <a href="<%= frontendUrl %>/<%= page.slug %>" target="_blank" class="bg-success-focus text-success-600 bg-hover-success-200 fw-medium w-40-px h-40-px d-flex justify-content-center align-items-center">
                                                <iconify-icon icon="majesticons:eye-line" class="icon text-xl"></iconify-icon>
                                            </a> -->
                                        </div>
                                        <a href="/page-master/edit-page/<%= page._id %>" class="bg-success-focus text-success-600 bg-hover-success-200 fw-medium w-40-px h-40-px d-flex justify-content-center align-items-center">
                                            <iconify-icon icon="lucide:edit" class="menu-icon"></iconify-icon>
                                        </a>
                                        <% if (page.path === '/') { %>
                                            <button type="button" class="btn btn-sm btn-outline-secondary remove-item-btn" disabled title="Home page cannot be deleted">
                                                <iconify-icon icon="material-symbols:delete-outline"></iconify-icon>
                                            </button>
                                        <% } else { %>
                                            <button type="button" class="delete-page-btn btn btn-sm btn-outline-danger remove-item-btn" data-page-id="<%= page._id %>">
                                                <iconify-icon icon="material-symbols:delete-outline"></iconify-icon>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No pages found. Create your first page!</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mt-24">
             <!-- <span>Showing 1 to 10 of 12 entries</span> -->
            <ul class="pagination d-flex flex-wrap align-items-center gap-2 justify-content-center">
                <li class="page-item">
                    <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" href="javascript:void(0)">
                        <iconify-icon icon="ep:d-arrow-left" class=""></iconify-icon>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md bg-primary-600 text-white" href="javascript:void(0)">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px" href="javascript:void(0)">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" href="javascript:void(0)">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" href="javascript:void(0)">4</a>
                </li>
                <li class="page-item">
                    <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" href="javascript:void(0)">5</a>
                </li>
                <li class="page-item">
                    <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" href="javascript:void(0)">
                        <iconify-icon icon="ep:d-arrow-right" class=""></iconify-icon>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<% script = `
<script>
    // Search functionality
    $('#pageSearch').on('keyup', function() {
        const searchValue = $(this).val().toLowerCase();

        $('#pagesTableBody tr').each(function() {
            const row = $(this);
            const pageName = row.find('td:eq(0)').text().toLowerCase();
            const path = row.find('td:eq(1)').text().toLowerCase();

            if (pageName.includes(searchValue) || path.includes(searchValue)) {
                row.show();
            } else {
                row.hide();
            }
        });
    });

    // Delete page functionality
    $(document).on('click', '.delete-page-btn', async function () {
        const pageId = $(this).data('page-id');
        const row = $(this).closest('tr');
        const pagePath = row.find('td:eq(1)').text(); // Get the path from the second column
        
        // Prevent deletion of home page
        if (pagePath === '/') {
            showToast('Home page cannot be deleted!', 'error');
            return;
        }

        const result = await Swal.fire({
            title: 'Delete Page?',
            text: 'Are you sure you want to delete this page?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it',
            cancelButtonText: 'Cancel'
        });

        if (result.isConfirmed) {
            $.ajax({
                url: '/api/pages/' + pageId,
                type: 'DELETE',
                success: function(response) {
                    if (response.success) {
                        showToast('Page deleted successfully!', 'success');
                        row.fadeOut(300, function() {
                            $(this).remove();
                            // Check if table is empty
                            if ($('#pagesTableBody tr').length === 0) {
                                $('#pagesTableBody').html('<tr><td colspan="5" class="text-center">No pages found. Create your first page!</td></tr>');
                            }
                        });
                    } else {
                        showToast('Error: ' + response.message, 'error');
                    }
                },
                error: function(xhr) {
                    showToast('Error deleting page: ' + (xhr.responseJSON?.message || 'Unknown error'), 'error');
                }
            });
        }
    });
</script>
` %>
