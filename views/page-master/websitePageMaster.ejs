<div class="card p-0 radius-12">
    <div class="card-header border-bottom bg-base py-16 px-24 d-flex align-items-center flex-wrap gap-3 justify-content-between">
        <div class="d-flex align-items-center flex-wrap gap-3">
            <div class="search-container d-flex align-items-center gap-2">
                <form method="GET" action="/page-master/web-page-master" class="d-flex align-items-center gap-2">
                    <div class="input-group" style="width: 300px;">
                        <input type="text" name="search" id="pageSearch" class="form-control" placeholder="Search pages..." value="<%= search || '' %>">
                        <button type="submit" class="btn btn-outline-secondary">
                            <iconify-icon icon="ion:search-outline"></iconify-icon>
                        </button>
                    </div>
                </form>
                <% if (search) { %>
                    <a href="/page-master/web-page-master" class="btn btn-sm btn-outline-danger">
                        <iconify-icon icon="material-symbols:close"></iconify-icon>
                        Clear
                    </a>
                <% } %>
            </div>
        </div>
        <!-- <a href="/page-master/add-page" class="btn btn-primary text-sm btn-sm px-12 py-12 radius-8 d-flex align-items-center gap-2">
            <iconify-icon icon="ic:baseline-plus" class="icon text-xl line-height-1"></iconify-icon>
            Add New Page
        </a> -->
        <a href="/page-master/add-page" class="btn btn-sm btn-primary d-flex align-items-center gap-1">
            <iconify-icon icon="ic:baseline-plus" class="icon text-xl line-height-1"></iconify-icon>
            Add New Page
        </a>
    </div>
    <div class="card-body p-24">
        <div class="table-responsive scroll-sm">
            <!-- <table class="table bordered-table sm-table mb-0"> -->
                 <table class="table custom-table">
                <thead>
                    <tr>
                        <th scope="col">Page</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Updated</th>
                        <th scope="col" class="text-center">Status</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody id="pagesTableBody">
                    <% if (typeof pages !== 'undefined' && pages.length > 0) { %>
                        <% pages.forEach(page => { %>
                            <tr data-page-id="<%= page._id %>">
                                <td><%= page.name %></td>
                                <td><%= page.path %></td>
                                <td><%= new Date(page.updatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                                <td class="text-center">
                                    <% if (page.status === 'active') { %>
                                        <span class="badge custom-badge badge-outline-success">Published</span>
                                    <% } else { %>
                                        <span class="badge custom-badge badge-outline-secondary">Draft</span>
                                    <% } %>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center gap-10 justify-content-center">
                                        <!-- <a href="<%= page.path %>" target="_blank" class="bg-info-focus bg-hover-info-200 text-info-600 fw-medium w-40-px h-40-px d-flex justify-content-center align-items-center rounded-circle">
                                            <iconify-icon icon="majesticons:eye-line" class="icon text-xl"></iconify-icon>
                                        </a> -->
                                        <div class="d-flex justify-content-center align-items-center">
                                            <% 
                                                var pageStatus = page.status;
                                                var pageUrl = frontendUrl + '/' + page.slug;

                                                // If status is active â†’ add ?draft=true
                                                if (pageStatus === 'inactive') {
                                                    pageUrl += '?draft=true';
                                                }
                                            %>

                                            <a href="<%= pageUrl %>" target="_blank" class="btn btn-sm btn-outline-success">
                                                <iconify-icon icon="majesticons:eye-line" class="icon "></iconify-icon>
                                            </a>
                                            <!-- <a href="<%= frontendUrl %>/<%= page.slug %>" target="_blank" class="bg-success-focus text-success-600 bg-hover-success-200 fw-medium w-40-px h-40-px d-flex justify-content-center align-items-center">
                                                <iconify-icon icon="majesticons:eye-line" class="icon text-xl"></iconify-icon>
                                            </a> -->
                                        </div>
                                        <a href="/page-master/edit-page/<%= page._id %>" class="btn btn-sm btn-outline-secondary">
                                            <!-- <iconify-icon icon="lucide:edit" class="menu-icon"></iconify-icon> -->
                                            <iconify-icon icon="material-symbols:edit-outline"></iconify-icon>
                                        </a>
                                        <% if (page.path === '/') { %>
                                            <button type="button" class="btn btn-sm btn-outline-secondary remove-item-btn" disabled title="Home page cannot be deleted">
                                                <iconify-icon icon="material-symbols:delete-outline"></iconify-icon>
                                            </button>
                                        <% } else { %>
                                            <button type="button" class="delete-page-btn btn btn-sm btn-outline-danger remove-item-btn" data-page-id="<%= page._id %>">
                                                <iconify-icon icon="material-symbols:delete-outline"></iconify-icon>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No pages found. Create your first page!</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>


        
        <% if (pagination && pagination.totalItems > 0) { %>
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mt-4 pt-3 border-top">
            <div class="text-muted">
                Showing <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %> to 
                <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalItems) %> 
                of <%= pagination.totalItems %> entries
            </div>
            

            

            
            <% if (pagination.totalPages > 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination d-flex flex-wrap align-items-center gap-2 justify-content-center mb-0">
                    <!-- Previous Button -->
                    <li class="page-item">
                        <% if (pagination.hasPrev) { %>
                            <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" 
                               href="?page=<%= pagination.prevPage %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                <iconify-icon icon="ep:d-arrow-left"></iconify-icon>
                            </a>
                        <% } else { %>
                            <span class="page-link bg-neutral-200 text-neutral-400 fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md">
                                <iconify-icon icon="ep:d-arrow-left"></iconify-icon>
                            </span>
                        <% } %>
                    </li>

                    <!-- Dynamic Page Numbers -->
                    <% 
                        let startPage = Math.max(1, pagination.currentPage - 2);
                        let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                        
                        // Adjust if we're near the beginning or end
                        if (endPage - startPage < 4) {
                            if (startPage === 1) {
                                endPage = Math.min(pagination.totalPages, startPage + 4);
                            } else {
                                startPage = Math.max(1, endPage - 4);
                            }
                        }
                    %>

                    <% if (startPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" 
                               href="?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %>">1</a>
                        </li>
                        <% if (startPage > 2) { %>
                            <li class="page-item">
                                <span class="page-link bg-transparent text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md">...</span>
                            </li>
                        <% } %>
                    <% } %>

                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <li class="page-item">
                            <% if (i === pagination.currentPage) { %>
                                <span class="page-link text-white fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md bg-primary-600"><%= i %></span>
                            <% } else { %>
                                <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" 
                                   href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"><%= i %></a>
                            <% } %>
                        </li>
                    <% } %>

                    <% if (endPage < pagination.totalPages) { %>
                        <% if (endPage < pagination.totalPages - 1) { %>
                            <li class="page-item">
                                <span class="page-link bg-transparent text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md">...</span>
                            </li>
                        <% } %>
                        <li class="page-item">
                            <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" 
                               href="?page=<%= pagination.totalPages %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"><%= pagination.totalPages %></a>
                        </li>
                    <% } %>

                    <!-- Next Button -->
                    <li class="page-item">
                        <% if (pagination.hasNext) { %>
                            <a class="page-link bg-neutral-300 text-secondary-light fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md" 
                               href="?page=<%= pagination.nextPage %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                <iconify-icon icon="ep:d-arrow-right"></iconify-icon>
                            </a>
                        <% } else { %>
                            <span class="page-link bg-neutral-200 text-neutral-400 fw-semibold radius-8 border-0 d-flex align-items-center justify-content-center h-32-px w-32-px text-md">
                                <iconify-icon icon="ep:d-arrow-right"></iconify-icon>
                            </span>
                        <% } %>
                    </li>
                </ul>
            </nav>


            <% } %>
        </div>
        <% } %>
    </div>
</div>
<% script = `
<script>
    // Search form submission on Enter key
    $('#pageSearch').on('keypress', function(e) {
        if (e.which === 13) {
            $(this).closest('form').submit();
        }
    });

    // Delete page functionality
    $(document).on('click', '.delete-page-btn', async function () {
        const pageId = $(this).data('page-id');
        const row = $(this).closest('tr');
        const pagePath = row.find('td:eq(1)').text(); // Get the path from the second column
        
        // Prevent deletion of home page
        if (pagePath === '/') {
            showToast('Home page cannot be deleted!', 'error');
            return;
        }

        const result = await Swal.fire({
            title: 'Delete Page?',
            text: 'Are you sure you want to delete this page?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it',
            cancelButtonText: 'Cancel'
        });

        if (result.isConfirmed) {
            $.ajax({
                url: '/api/pages/' + pageId,
                type: 'DELETE',
                success: function(response) {
                    if (response.success) {
                        showToast('Page deleted successfully!', 'success');
                        row.fadeOut(300, function() {
                            $(this).remove();
                            // Check if table is empty
                            if ($('#pagesTableBody tr').length === 0) {
                                $('#pagesTableBody').html('<tr><td colspan="5" class="text-center">No pages found. Create your first page!</td></tr>');
                            }
                        });
                    } else {
                        showToast('Error: ' + response.message, 'error');
                    }
                },
                error: function(xhr) {
                    showToast('Error deleting page: ' + (xhr.responseJSON?.message || 'Unknown error'), 'error');
                }
            });
        }
    });
</script>
` %>
